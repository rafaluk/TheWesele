<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">
            @color/colorPrimary
        </item>
        <item name="colorPrimaryDark">
            @color/colorPrimaryDark
        </item>
        <item name="colorAccent">
            @color/colorAccent
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">
            false
        </item>
        <item name="windowNoTitle">
            true
        </item>
    </style>

    //imiona narzeczonych
    <style name="Titel">
        <item name="android:textColor">
            #EC407A
        </item>
        <item name="android:textSize">
            60dp
        </item>
        <item name="android:fontFamily">
            sans-serif-light
        </item>
        <item name="android:shadowRadius">
            15
        </item>
        <item name="android:shadowColor">
            @android:color/white
        </item>
    </style>

    //napis pod imionami"

    <style name="Titel.Sub">
        <item name="android:textColor">
            #EC407A
        </item>
        <item name="android:textSize">
            30dp
        </item>
        <item name="android:fontFamily">
            sans-serif-light
        </item>
        <item name="android:shadowRadius">
            15
        </item>
        <item name="android:shadowColor">
            @android:color/white
        </item>
    </style>

    <style name="CountDown" parent="AppTheme">
        <item name="android:textColor">
            #FFFFFF
        </item>
        <item name="android:shadowRadius">
            15
        </item>
        <item name="android:shadowColor">
            @android:color/black
        </item>
    </style>

    <style name="CountDown.Big">
        <item name="android:textSize">
            50dp
        </item>
    </style>

    <style name="CountDown.Small">
        <item name="android:textSize">
            30dp
        </item>
    </style>

    <style name="Fuksja" parent="Widget.AppCompat.Button">
        <item name="android:background">
            #EC407A
        </item>
        <item name="android:textColor">
            #FFFFFF
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DetailsButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">
            16dp
        </item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_screen
        </item>
    </style>
</resources>
